<persistence-unit name="wepons" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>models.Person</class>

    <properties>
        <property name="dialect" value="org.hibernate.dialect.SQLiteDialect" />
        <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />
        <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:person.db" />
        <property name="javax.persistence.jdbc.user" value="" />
        <property name="javax.persistence.jdbc.password" value="" />
        <property name="hibernate.show_sql" value="true" />
        <property name="format_sql" value="true" />
        <property name="hibernate.flushMode" value="ALWAYS" />
        <property name="hibernate.connection.charSet" value="UTF-8" />
        <property name="hibernate.hbm2ddl.auto" value="validate" />
    </properties>
</persistence-unit>